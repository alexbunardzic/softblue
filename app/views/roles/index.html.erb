<h2>Roles</h2>
<br />
<%= link_to "New Role", new_role_path %>
<br /><br />
<%= paginate @roles %>
<br />
<table>
  <tr>
    <th align="left">Name</th><th align="left">Description</th>
  </tr>
  <% @roles.each do |role| %>
    <tr>
      <td><%= role.name %></td>
      <td><%= role.description %></td>
    </tr>
  <% end %>
</table>